extends layout

block content
  h1 Welcome to the board
  div(class="content")
    div(class="box")
      div(class="message-board")
        each message in messages 
          h1=message.title 
          p=message.message
  if !user 
    h1(style="display: flex; justify-content:space-between")
      a(href="/login") Log In
      a(href="/signup") Sign Up 
  else 
    h1 
      a(href="/logout") Log Out
  
